{
  "name": "azure-ad-jwt-lite",
  "version": "0.0.0-development",
  "description": "Lightweight (<320kb unzipped) library to validate Microsoft AzureAD. Written in typescript fully-tested with 100% code coverage.",
  "main": "lib/src/index.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "prettier": "npx prettier --write '{src,test}/**/*.{ts,tsx,json,yml}'",
    "lint": "npx eslint '{src,test}/**/*.{ts,tsx,json,yml}'",
    "test": "npx jest",
    "build": "npx tsc",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "azure",
    "azuread",
    "aad",
    "azure-ad",
    "jwt",
    "jsonwebtoken",
    "auth",
    "oauth2",
    "light",
    "lightweight",
    "typescript"
  ],
  "author": "Mario Arnautou",
  "repository": {
    "url": "https://github.com/MarioArnt/azure-ad-jwt-lite"
  },
  "license": "MIT",
  "dependencies": {
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nock": "^13.2.9",
    "prettier": "^2.8.1",
    "semantic-release": "^19.0.5",
    "sinon": "^15.0.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "release": {
    "branches": ["main", "next"]
